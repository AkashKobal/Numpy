#### Statistics
x = np.arange(1,10)

print(np.mean(x))
print(np.median(x))

y = np.array([[1,2,3],[4,5,6]])

print(np.mean(y,axis=0)) #column wise mean
print(np.mean(y,axis=1)) #row wise mean

print(np.std(x))

#Example:
data = np.loadtxt("dataset/populations.txt")
print(data)
print(data.shape)
print(year, hare, lynx, carrot = data.T)
print(year)
print(populations = data[:,1:])
print(populations)
print(populations.std(axis=0))
print(populations.mean(axis=0))
#which species has the highest population each year

print(np.argmax(populations, axis=1))



